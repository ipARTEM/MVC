<Window x:Class="MVC04WPFICommand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVC04WPFICommand"
        mc:Ignorable="d"
        xmlns:cmd="clr-namespace:MVC04WPFICommand.Commands"
        
        Title="MainWindow" Height="200" Width="350"  WindowStartupLocation="CenterScreen" >

    <Window.Resources>
        <cmd:AppShutdownCommand x:Key="AppShutdownCommand"  />
    </Window.Resources>
    
    <Grid>
        <Button FontSize="30"  Content="Закрыть приложение" Margin="5"  Command="{StaticResource AppShutdownCommand}"/>
    </Grid>
</Window>
